<Window x:Class="MediaSensor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaSensor"
        mc:Ignorable="d"
        Title="Media sensor" 
        Height="120" Width="260" 
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <StackPanel Orientation="Vertical" Margin="15">
        <TextBlock x:Name="StatusText" 
                   TextWrapping="Wrap" 
                   ToolTip="{Binding Path=Text, ElementName=StatusText}">
            Initializing...
        </TextBlock>
        <DockPanel x:Name="OverridePanel" 
                   Margin="0 10"
                   LastChildFill="False">
            <TextBlock x:Name="OverridingText"
                       DockPanel.Dock="Left">
                Switch: Auto
            </TextBlock>
            <Button x:Name="OverrideButton" 
                    Margin="5 -1 0 0" 
                    DockPanel.Dock="Right" 
                    Width="60"
                    Padding="4 1" Click="OverrideButton_Click">
                Toggle
            </Button>
        </DockPanel>
    </StackPanel>
</Window>
