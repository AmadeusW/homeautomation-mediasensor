<Window x:Class="MediaSensor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaSensor"
        mc:Ignorable="d"
        Title="Media sensor" Height="120" Width="240" StateChanged="Window_StateChanged" ResizeMode="CanMinimize">
    <StackPanel Orientation="Vertical" Margin="15">
        <Button x:Name="OverrideButton" Margin="0 0 0 5" IsEnabled="False">Override</Button>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="StatusText" TextWrapping="Wrap" ToolTip="{Binding Path=Text, ElementName=StatusText}">Initializing...</TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
